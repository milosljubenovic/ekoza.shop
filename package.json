{
  "name": "lazy-pleasure-store",
  "version": "1.0.0",
  "description": "Lazy Pleasure eCommerce Store",
  "scripts": {
    "watch:css": "npx tailwindcss -i ./assets/css/main.css -o ./assets/css/output.css --watch",
    "build:css": "npx tailwindcss -i ./assets/css/main.css -o ./assets/css/output.css --minify",
    "minify:js": "node minify-assets.js",
    "build": "npm run build:css && bundle exec jekyll build && npm run minify:js",
    "dev": "bundle exec jekyll serve --livereload",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:e2e"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "html-minifier-terser": "^7.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "tailwindcss": "^3.4.0",
    "terser": "^5.44.1"
  }
}
