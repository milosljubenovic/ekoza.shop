{
  "name": "lazy-pleasure-store",
  "version": "1.0.0",
  "description": "Lazy Pleasure eCommerce Store",
  "scripts": {
    "watch:css": "npx tailwindcss -i ./assets/css/main.css -o ./assets/css/output.css --watch",
    "build:css": "npx tailwindcss -i ./assets/css/main.css -o ./assets/css/output.css --minify",
    "minify:js": "node minify-assets.js",
    "build": "npm run build:css && bundle exec jekyll build && npm run minify:js",
    "dev": "bundle exec jekyll serve --livereload"
  },
  "devDependencies": {
    "html-minifier-terser": "^7.2.0",
    "tailwindcss": "^3.4.0",
    "terser": "^5.44.1"
  }
}
